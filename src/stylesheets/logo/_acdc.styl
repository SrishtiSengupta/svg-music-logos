.acdc
	&--classical
		#fill
			path
			polygon
				fill: #626262
		#shadow-one
			polygon
				fill: #4A4A4A
		#shadow-two
			polygon
				fill: #EDEDED
		#shadow-three
			polygon
				fill: #C2C2C2
		#shadow-four
			polygon
				fill: #4D4D4D

	&--classical-color
		#fill
			path
			polygon
				fill: #EF2334
		#shadow-one
			polygon
				fill: #E3051B
		#shadow-two
			polygon
				fill: #FFEBCB
		#shadow-three
			polygon
				fill: #F7B28A
		#shadow-four
			polygon
				fill: #784500

	&--stroke
		stroke-width: 2px
		stroke: #000
		fill: rgba(#FFF, 0);
	&--inverse
		fill: #FFF
